<resources>
    <style name="Base.Theme.TaskApp" parent="Theme.Material3.DayNight.NoActionBar" />
    <style name="Theme.TaskApp" parent="Base.Theme.TaskApp">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="CustomTabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_full_rounded_green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_full_rounded_outlined_green</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>